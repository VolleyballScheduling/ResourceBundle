{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('/bundles/VolleyballResource/css/homepage.css') }}" rel="stylesheet" />
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/bundles/VolleyballResource/js/volleyball.js') }}" type="text/javascript" ></script>
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-4">
            {{ block('signin') }}    
        </div>
        {% block carousel %}
        <div class="col-md-8">
            {% include 'VolleyballResourceBundle:Carousel:carousel.html.twig' with { 'items': carousel.items } %}
        </div>
        {% endblock %}
    </div>
    <div class="row">
        {{ block('home_colmns') }}
    </div>
</div>
{% endblock %}

{% block header %}
    <div class="masthead clearfix">
        <h1 class="pull-left">
            <i class="icon-bookmark icon-large"></i><br />
            <a href="{{ path( 'homepage') }}">{{ 'Volleyball Scheduling System' | title }}</a>
        </h1>
        {{ knp_menu_render('main') }}
    </div>
{% endblock %}

{% block footer %}
<div class="footer">
    <div class="container">
        <div class="row">
            {{ knp_menu_render('main') }}
        </div>
    </div>
</div>
{% endblock %}

{% block home_columns %}
    <div class="col-md-12">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <i class="fa fa-3x fa-th pull-left"></i>
                    <div class="content">
                        <h2>Multi-Facility Interface</h2>
                        <p>blah blah blah blah blah!</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <i class="fa fa-3x fa-print pull-left"></i>
                    <div class="content">
                        <h2>Point And Print Reports</h2>
                        <p>blah blah blah blah blah!</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <i class="fa fa-3x fa-desktop pull-left"></i>
                    <div class="content">
                        <h2>User Portals</h2>
                        <p>blah blah blah blah blah!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block signin %}
    <h1>{{ 'sign in' | title }}</h1>
    <div class="center-block">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <p>
                <label for="username">{{ 'email address' | title }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="text-input" />
            </p>
            <p>
                <label for="password">{{ 'password' | title }}</label>
                <input type="password" id="password" name="_password" class="text-input" />
            </p>
            <p>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="pull-left"/>
                <label for="remember_me"> {{ 'remember me' | title }}</label>
                <input type="submit" id="_submit" name="_submit" value="sign in &raquo;" class="greenButton" class="pull-right"/>
            </p>
        </form>
    </div>
{% endblock %}